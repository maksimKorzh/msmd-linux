# System variables
export PATH=$PATH:/sbin:/usr/local/bin:/usr/local/sbin
export LD_LIBRARY_PATH=/lib:/usr/local/lib
export TZ=EET-2EEST,M3.5.0/3,M10.5.0/4 sh

# Allow insecure downloading of Golang packages
export GOINSECURE="proxy.golang.org/*,github.com,github.com/*"
export GONOSUMDB="proxy.golang.org/*,github.com,github.com/*"
export GOPRIVATE="proxy.golang.org/*,github.com,github.com/*"

# Aliases
alias reboot="sudo reboot"
alias poweroff="sudo poweroff"
alias ethernet="sudo ethernet"
alias wifi="sudo wifi"
alias wget="wget --no-check-certificate"
